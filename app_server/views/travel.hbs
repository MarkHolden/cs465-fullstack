<div class="box">
	<div>
		<div class="body">
			<h1>Travel</h1>
			<ul id="sites">
				{{#each trips}}
				<li>
					<a href="/api/trips/{{this.code}}"><img src={{this.image}} alt="Img"></a>
					<h2><a href={{this.url}}>{{this.name}}</a></h2>
					{{{this.description}}}
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>